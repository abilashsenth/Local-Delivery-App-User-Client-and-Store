<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AssignActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call Customer"
        android:id="@+id/call_customer"
        android:textColor="#000000"
        android:gravity="center"
        android:onClick="callCustomer"
        android:textSize="12sp"
        android:layout_weight="31"
        android:layout_margin="10sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAMPLE"
        android:id="@+id/oid"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="12sp"
        android:layout_weight="31"
        android:layout_margin="10sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAMPLE"
        android:id="@+id/shopIDx"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="12sp"
        android:layout_weight="31"
        android:layout_margin="10sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAMPLE"
        android:id="@+id/status"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="12sp"
        android:layout_weight="31"
        android:layout_margin="10sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAMPLE"
        android:id="@+id/name"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="12sp"
        android:layout_weight="31"
        android:layout_margin="10sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAMPLE"
        android:id="@+id/number"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="12sp"
        android:layout_weight="31"
        android:layout_margin="10sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAMPLE"
        android:id="@+id/address"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="12sp"
        android:layout_weight="31"
        android:layout_margin="10sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAMPLE"
        android:id="@+id/date"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="12sp"
        android:layout_weight="31"
        android:layout_margin="10sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAMPLE"
        android:id="@+id/time"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="12sp"
        android:layout_weight="31"
        android:layout_margin="10sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAMPLE"
        android:id="@+id/timepref"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="12sp"
        android:layout_weight="31"
        android:layout_margin="10sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAMPLE"
        android:id="@+id/totalamt"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="12sp"
        android:layout_weight="31"
        android:layout_margin="10sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAMPLE"
        android:id="@+id/paymentMethod"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="12sp"
        android:layout_weight="31"
        android:layout_margin="10sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAMPLE"
        android:id="@+id/productsOrdered"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="12sp"
        android:layout_weight="31"
        android:layout_margin="10sp"/>

    <com.ncorti.slidetoact.SlideToActView
        android:id="@+id/slider"
        android:layout_width="match_parent"
        app:outer_color="#ddd000"
        app:inner_color="#ffffff"
        android:layout_height="wrap_content"
        app:text="Confirm Order" />

</LinearLayout>