<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="120sp"
        android:layout_margin="20sp"
        android:src="@drawable/shop_login_header"/>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:id="@+id/home_recycler_layout_base"
        android:layout_height="500sp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        card_view:cardCornerRadius="15dp"
        app:cardBackgroundColor="#ffffff"
        card_view:cardElevation="5dp"
        app:contentPadding="10dp"
        android:layout_margin="20sp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:visibility="visible"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="50sp"
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:src="@drawable/shop_login_card_title"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30sp"
                android:hint="shop id"
                android:textStyle="bold"
                android:backgroundTint="#c0c0c0"
                android:id="@+id/usernameEditText"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30sp"
                android:backgroundTint="#c0c0c0"
                android:textStyle="bold"
                android:password="true"
                android:hint="shop password"
                android:id="@+id/passwordEditText"/>

            <ImageView
                android:layout_gravity="center"
                android:layout_width="100sp"
                android:layout_height="60sp"
                android:layout_margin="30sp"
                android:src="@drawable/shop_go"
                android:onClick="shopLoginClick"
                android:id="@+id/partnerLoginButton"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>






</LinearLayout>