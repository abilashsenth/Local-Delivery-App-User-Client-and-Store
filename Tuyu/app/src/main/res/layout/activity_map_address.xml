<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapAddressActivity">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:context=".MapAddressActivity" />

    <ImageView
        android:layout_width="300sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/confirm_your_address"
        android:layout_margin="25sp"
        android:layout_height="wrap_content"
        android:src="@drawable/confirm_your_address"/>
    <RelativeLayout
        android:layout_width="360sp"
        android:layout_height="300sp"
        android:id="@+id/card_one_layout"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/confirm_your_address">

        <ImageView
            android:layout_width="396sp"
            android:clickable="true"
            android:layout_height="300sp"
            android:src="@drawable/address_card_one"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_margin="15sp"
            android:text="Status"
            android:textSize="16sp"
            android:textColor="#60605f"
            android:id="@+id/AddressText"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="300sp"
        android:layout_height="100sp"
        android:clickable="true"
        android:onClick="ConfirmAddress"
        android:layout_centerInParent="true"
        android:layout_margin="20sp"
        android:layout_alignParentBottom="true"
        android:id="@+id/button_confirm_address"
        android:src="@drawable/continue_button"/>





</RelativeLayout>