<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/list_item_home_recycler_layout_base"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    card_view:cardCornerRadius="15dp"
    app:cardBackgroundColor="#ffffff"
    card_view:cardElevation="5dp"
    app:contentPadding="8dp"
    android:layout_margin="0sp"
    card_view:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="35sp"
                        android:id="@+id/home_header_location_marker"
                        android:layout_height="35sp"
                        android:src="@drawable/my_location_marker"
                        android:layout_margin="2sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:layout_marginTop="6sp"
                        android:textStyle="bold"
                        android:id="@+id/list_item_home_header_addressTop"
                        android:textColor="#000000"
                        android:layout_marginLeft="10sp"
                        android:layout_marginBottom="3sp"
                        android:textSize="17sp"
                        android:textAlignment="viewStart"
                        android:layout_weight="31"
                        />

                </LinearLayout>




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SAMPLE"
                    android:id="@+id/list_item_home_header_address"
                    android:textColor="#b3b3b3"
                    android:layout_marginLeft="45sp"
                    android:layout_marginBottom="10sp"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    android:textSize="10sp"
                    android:layout_weight="31"
                    />
            </LinearLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:id="@+id/list_item_home_recycler_header_base2"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:card_view="http://schemas.android.com/tools"
            card_view:cardCornerRadius="7dp"
            app:cardBackgroundColor="#ffffff"
            card_view:cardElevation="5dp"
            app:contentPadding="7dp"
            android:layout_margin="10sp"
            card_view:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="110sp"
                        android:layout_height="wrap_content"
                        android:text="Shop Name"
                        android:textStyle="bold"
                        android:layout_marginLeft="10sp"
                        android:id="@+id/list_item_home_header_shopname"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        />

                    <ImageView
                        android:layout_width="120sp"
                        android:layout_marginTop="15sp"
                        android:layout_marginRight="10sp"
                        android:layout_gravity="right"
                        android:layout_marginLeft="100sp"
                        android:layout_height="20sp"
                        android:id="@+id/list_item_home_header_ongoing_indicator"
                        android:src="@drawable/ongoing_home_header_indicator"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="130sp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/divider"/>




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Overview"
                    android:id="@+id/list_item_home_header_order_overview"
                    android:textColor="#b3b3b3"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:layout_marginTop="3sp"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="10sp"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.cardview.widget.CardView>