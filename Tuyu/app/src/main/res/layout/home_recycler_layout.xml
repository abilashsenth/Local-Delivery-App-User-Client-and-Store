<?xml version="1.0" encoding="utf-8"?>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:id="@+id/home_recycler_layout_base"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        card_view:cardCornerRadius="15dp"
        app:cardBackgroundColor="#ffffff"
        card_view:cardElevation="5dp"
        app:contentPadding="10dp"
        android:layout_margin="4sp"
        card_view:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">


    <ImageView
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:layout_gravity="center"
        android:id="@+id/home_recycler_image"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="20sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="start"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textAlignment="textStart"
            android:textSize="20sp"
            android:id="@+id/home_recycler_name"/>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:id= "@+id/home_recycler_rating"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:id="@+id/home_recycler_distance"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:id="@+id/home_recycler_sampleprice"/>



    </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>