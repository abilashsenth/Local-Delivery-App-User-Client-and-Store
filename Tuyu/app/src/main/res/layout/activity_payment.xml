<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_weight="2"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".PaymentActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_gravity="start"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
        android:layout_width="220sp"
        android:layout_margin="5sp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:src="@drawable/confirm_order"
        ></ImageView>

        <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:id="@+id/home_recycler_layout_base"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        card_view:cardCornerRadius="15dp"
        app:cardBackgroundColor="#ffffff"
        card_view:cardElevation="5dp"
        app:contentPadding="10dp"
        android:layout_margin="20sp"
        card_view:cardUseCompatPadding="true">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:visibility="visible"
                    android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="name"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:id="@+id/name"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:text="userAddress"
                                android:layout_marginTop="5sp"
                                android:layout_height="wrap_content"
                                android:id="@+id/address"/>

                            <TextView
                                android:layout_marginTop="5sp"
                                android:layout_width="wrap_content"
                                android:text="+91 1234567890"
                                android:layout_height="wrap_content"
                                android:id="@+id/number"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/blue_dotted_lines"/>

                        <TextView
                            android:layout_marginTop="5sp"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:text="Shop Name"
                            android:layout_height="wrap_content"
                            android:id="@+id/shop_name"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:text="12/21/20"
                                android:layout_marginTop="10sp"
                                android:layout_height="wrap_content"
                                android:id="@+id/date"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="19:50:60"
                                android:layout_marginTop="10sp"
                                android:id="@+id/time"/>

                            <ImageView
                                android:layout_margin="2sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/divider_large"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_marginTop="30sp"
                                android:layout_marginBottom="8sp"
                                android:layout_height="wrap_content"
                                android:text="ServiceList"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:id="@+id/service_list"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="As soon as possible"
                                android:id="@+id/slotTiming"/>




                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Amount"
                            android:layout_gravity="start"
                            android:layout_height="wrap_content"
                            android:id="@+id/tot_amt_indicator"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginLeft="190sp"
                            android:text="120 ₹"
                            android:layout_height="wrap_content"
                            android:id="@+id/total_amount"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Delivery/Service Charges"
                            android:layout_gravity="start"
                            android:layout_height="wrap_content"
                            android:id="@+id/delivery_charge_amt_indicator"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginLeft="90sp"
                            android:text="₹0"
                            android:layout_height="wrap_content"
                            android:id="@+id/delivery_charges"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_margin="7sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/divider_large"/>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25sp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Total To Pay"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_gravity="start"
                            android:layout_height="wrap_content"
                            android:id="@+id/tot_amt_indicator_final"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginLeft="190sp"
                            android:text="₹120"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:id="@+id/total_amount_final"/>
                    </LinearLayout>

                </LinearLayout>




    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:id="@+id/payment_activity_ensure"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:card_view="http://schemas.android.com/tools"
            card_view:cardCornerRadius="15dp"
            app:cardBackgroundColor="#ffffff"
            card_view:cardElevation="5dp"
            app:contentPadding="10dp"
            android:layout_margin="20sp"
            card_view:cardUseCompatPadding="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/please_ensure"></ImageView>


        </androidx.cardview.widget.CardView>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:layout_gravity="end"
            android:src="@drawable/payment_method_view"
            android:layout_marginBottom="70sp"/>

    </LinearLayout>






    </ScrollView>



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:scaleType="centerCrop"
        android:id="@+id/place_order_button"
        android:layout_gravity="bottom"
        android:onClick="goToOrderTrackActivity"
        android:src="@drawable/place_order" />

</FrameLayout>
