<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ListActivitySecondary">



    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_weight="1"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/recycler_view2">


    </androidx.recyclerview.widget.RecyclerView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:layout_weight="1"
        android:visibility="gone"
        android:id="@+id/cartViewListSecondary"
        android:layout_gravity="bottom"
        android:background="#c0c0c0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:id="@+id/list_secondary_mini_cart_header"
            android:text="Cart"
            android:layout_margin="10sp"
           android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_below="@id/list_secondary_mini_cart_header"
            android:text="Item Count"
            android:id="@+id/list_secondary_mini_cart_Count"
            android:layout_margin="10sp"
            android:textColor="@color/black" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_toRightOf="@id/list_secondary_mini_cart_header"
            android:text="price"
            android:id="@+id/list_secondary_mini_cart_price"
            android:layout_margin="10sp"
            android:textColor="@color/black" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="cart"
            android:id="@+id/openCartButton"
            android:onClick="openCart"/>

    </RelativeLayout>



</LinearLayout>