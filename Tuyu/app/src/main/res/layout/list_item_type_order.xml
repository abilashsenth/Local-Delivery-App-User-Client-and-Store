<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/home_recycler_layout_base"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    card_view:cardCornerRadius="15dp"
    app:cardBackgroundColor="#ffffff"
    card_view:cardElevation="5dp"
    app:contentPadding="10dp"
    android:layout_margin="4sp"
    card_view:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SAMPLE"
                android:layout_margin="10sp"
                android:id="@+id/list_item_type_order_oid"
                android:textColor="#c0c0c0"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_weight="31"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SAMPLE"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:id="@+id/list_item_type_order_shopname"
                android:textColor="#000000"
                android:layout_marginLeft="10sp"
                android:layout_marginBottom="3sp"
                android:gravity="center"
                android:textSize="17sp"
                android:layout_weight="31"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SAMPLE"
                android:id="@+id/list_item_type_order_totalamt"
                android:textColor="#000000"
                android:layout_marginLeft="10sp"
                android:layout_marginBottom="10sp"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_weight="31"
                />



        </LinearLayout>





    </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/divider"></ImageView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAMPLE"
            android:layout_marginLeft="10sp"
            android:id="@+id/list_item_type_order_status"
            android:textColor="#000000"
            android:textSize="12sp"
            android:layout_weight="31"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRODUCTS ORDERED"
            android:id="@+id/list_item_type_order_productsOrdered"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_marginTop="3sp"
            android:layout_weight="31"
            android:layout_marginLeft="10sp"/>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAMPLE"
        android:id="@+id/list_item_type_order_date"
        android:textColor="#c0c0c0"
        android:gravity="center"
        android:textSize="12sp"
        android:layout_weight="31"
        android:layout_marginLeft="10sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAMPLE"
        android:id="@+id/list_item_type_order_time"
        android:textColor="#c0c0c0"
        android:gravity="center"
        android:textSize="12sp"
        android:layout_weight="31"
        android:layout_marginLeft="10sp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAMPLE"
        android:id="@+id/list_item_type_order_paymentMethod"
        android:textColor="#c0c0c0"
        android:gravity="center"
        android:textSize="12sp"
        android:layout_weight="31"
        android:layout_marginLeft="10sp"/>

        <ImageView
            android:layout_width="100sp"
            android:layout_height="80sp"
            android:id="@+id/list_item_type_one_order_button"
            android:src="@drawable/reorder_icon"/>


</LinearLayout>

</androidx.cardview.widget.CardView>